<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">

    <fragment
            android:id="@+id/mainFragment"
            android:name="com.example.b_events.MainFragment"
            android:label="MainFragment"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.b_events.authentication.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.b_events.events.EventsFragment"
        android:label="EventsFragment" >
        <action
            android:id="@+id/action_eventsFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.b_events.events.EventDetailsFragment"
        android:label="EventDetailsFragment" >
        <argument
            android:name="eventUrl"
            app:argType="string" />
        <action
            android:id="@+id/action_eventDetailsFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteEventsFragment"
        android:name="com.example.b_events.favorite_events.FavoriteEventsFragment"
        android:label="FavoriteEventsFragment" >
        <action
            android:id="@+id/action_favoriteEventsFragment_to_favoriteEventDetailsFragment"
            app:destination="@id/favoriteEventDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteEventDetailsFragment"
        android:name="com.example.b_events.favorite_events.FavoriteEventDetailsFragment"
        android:label="FavoriteEventDetailsFragment">
        <argument
            android:name="favoriteEventId"
            app:argType="long" />
        <action
            android:id="@+id/action_favoriteEventDetailsFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.b_events.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >

        <argument
            android:name="location"
            app:argType="string"
            />
    </fragment>
</navigation>