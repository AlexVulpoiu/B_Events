<?xml version="1.0" encoding="utf-8"?>

<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- A transition describes an animation via start and end state -->
    <Transition
        motion:constraintSetStart="@+id/fav_start"
        motion:constraintSetEnd="@+id/fav_end">

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="25"
                motion:motionTarget="@id/fav_animation_date"
                motion:keyPositionType="parentRelative"
                motion:percentY="0.6"
                />
            <KeyPosition
                motion:framePosition="50"
                motion:motionTarget="@id/fav_animation_date"
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                />
            <KeyPosition
                motion:framePosition="75"
                motion:motionTarget="@id/fav_animation_date"
                motion:keyPositionType="parentRelative"
                motion:percentY="0.6"
                />
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/fav_animation_date"
                />
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/fav_animation_date"
                />
            <KeyAttribute
                motion:framePosition="85"
                motion:motionTarget="@id/fav_animation_title"
                android:alpha="0.0"
                />
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/fav_background"
                android:translationY="500dp" />
        </KeyFrameSet>
    </Transition>

    <!-- Constraints to apply at the start of the animation -->
    <ConstraintSet android:id="@+id/fav_start">
        <Constraint
            android:id="@id/fav_animation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />

        <Constraint
            android:id="@id/fav_animation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@id/fav_animation_date"
            motion:layout_constraintTop_toTopOf="@id/fav_animation_date"
            />
    </ConstraintSet>

    <!-- Constraints to apply at the end of the animation -->
    <ConstraintSet android:id="@+id/fav_end">
        <Constraint
            android:id="@id/fav_animation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />

        <Constraint
            android:id="@id/fav_animation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/fav_animation_date"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
    </ConstraintSet>
</MotionScene>